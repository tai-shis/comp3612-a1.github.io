    <script>
// Get all elements with the class 'nav-footer'
const allNavFooters = document.querySelectorAll('.nav-footer');

// Select the last one
const lastNavFooter = allNavFooters[allNavFooters.length - 1];

// Now, get the links within this specific nav-footer
const navItems = lastNavFooter.querySelectorAll('li a');


// Create an array of objects to hold link data for easier sorting and modification
const linkData = Array.from(navItems).map(link => ({
    originalText: link.textContent,
    modifiedText: link.textContent, // Initially same, but will change
    href: link.href
}));

// Apply renaming logic
linkData.forEach(item => {
    switch (item.originalText) {
        case "Mountain View Today":
            item.modifiedText = "The Albertan";
            break;
        case "Town and Country Today":
            item.modifiedText = "TownandCountryTODAY.com";
            break;
        case "Lakeland Today":
            item.modifiedText = "LakelandTODAY.ca";
            break;
    }
});

// Sort alphabetically by modified text
linkData.sort((a, b) => a.modifiedText.localeCompare(b.modifiedText));

// Update the DOM with the modified and sorted links
navItems.forEach((link, index) => {
    link.textContent = linkData[index].modifiedText;
    link.href = linkData[index].href;
});
</script>
